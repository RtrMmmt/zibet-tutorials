# ----------------------------------------------------------------
# environment
CC      = mpicc
FC      = 

# ----------------------------------------------------------------
# options
CFLAGS  = 
FFLAGS  = 

# ----------------------------------------------------------------
# sources and objects
C_SRC   = ex2.c
F_SRC   = 

C_OBJ   = $(C_SRC:.c=.o)
F_OBJ   = $(F_SRC:.f=.o)

# ----------------------------------------------------------------
# executables
EXEC    = ex2

all:    $(EXEC)

$(EXEC): $(C_OBJ)
	$(CC) -o $@ $(C_OBJ)

# ----------------------------------------------------------------
# rules
.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

.f.o:
	$(FC) $(FFLAGS) -c $< -o $@

# ----------------------------------------------------------------
# clean up
clean:
	rm -f $(EXEC) $(C_OBJ) $(F_OBJ)

# ----------------------------------------------------------------
# End of Makefile